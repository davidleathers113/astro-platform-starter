---
import Layout from '../layouts/Layout.astro';
import FAQSection from '../components/debt-relief/FAQSection.astro';

// Page metadata
const pageTitle = 'Frequently Asked Questions - Debt Settlement Program';
const pageDescription = 'Get answers to common questions about our debt settlement program, costs, timeline, and how debt settlement works.';
---

<Layout title={pageTitle} description={pageDescription}>
    <!-- FAQ Hero Section -->
    <section class="py-16 sm:py-20 md:py-24">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="mb-6 text-4xl sm:text-5xl md:text-6xl font-bold leading-tight tracking-tight text-[#2d7984] dark:text-[#58cbe0]">
                Frequently Asked Questions
            </h1>
            <p class="mb-8 text-lg sm:text-xl text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
                Get answers to the most common questions about our debt settlement program and how we can help you become debt-free.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a 
                    href="/debt-relief#qualification-form" 
                    class="btn btn-lg bg-[#2d7984] hover:bg-[#1d5058] text-white font-semibold"
                >
                    See If You Qualify
                </a>
                <a 
                    href="tel:8005551234" 
                    class="btn btn-lg bg-white hover:bg-gray-50 text-[#2d7984] border-2 border-[#2d7984] font-semibold"
                >
                    Call (800) 555-1234
                </a>
            </div>
        </div>
    </section>

    <!-- FAQ Content Section -->
    <section class="py-16 sm:py-20 bg-gray-50 dark:bg-gray-900 border-y border-gray-200 dark:border-gray-700">
        <div class="max-w-3xl mx-auto">
            <FAQSection />
        </div>
    </section>

    <!-- Additional Resources Section -->
    <section class="py-16 sm:py-20">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="mb-6 text-3xl sm:text-4xl font-bold text-[#2d7984] dark:text-[#58cbe0]">
                Still Have Questions?
            </h2>
            <p class="mb-8 text-lg text-gray-700 dark:text-gray-300 max-w-2xl mx-auto">
                Our debt settlement specialists are available to provide personalized answers and help you understand how our program can work for your specific situation.
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-10">
                <!-- Phone Support -->
                <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
                    <div class="w-12 h-12 bg-[#2d7984] text-white rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2 text-[#2d7984] dark:text-[#58cbe0]">Phone Support</h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">Speak with a specialist</p>
                    <a href="tel:8005551234" class="text-[#2d7984] dark:text-[#58cbe0] font-semibold hover:underline">
                        (800) 555-1234
                    </a>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">
                        9:00am - 8:00pm EST<br>7 days a week
                    </p>
                </div>

                <!-- Online Qualification -->
                <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
                    <div class="w-12 h-12 bg-[#2d7984] text-white rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2 text-[#2d7984] dark:text-[#58cbe0]">Quick Qualification</h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">Check eligibility in 30 seconds</p>
                    <a href="/debt-relief#qualification-form" class="text-[#2d7984] dark:text-[#58cbe0] font-semibold hover:underline">
                        Start Assessment
                    </a>
                </div>

                <!-- Learn More -->
                <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
                    <div class="w-12 h-12 bg-[#2d7984] text-white rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold mb-2 text-[#2d7984] dark:text-[#58cbe0]">How It Works</h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">Learn about our process</p>
                    <a href="/debt-relief#benefits" class="text-[#2d7984] dark:text-[#58cbe0] font-semibold hover:underline">
                        View Process
                    </a>
                </div>
            </div>

            <!-- Final CTA -->
            <div class="bg-[#2d7984] text-white rounded-lg p-8">
                <h3 class="text-2xl font-bold mb-4">Ready to Get Started?</h3>
                <p class="mb-6 text-lg opacity-90">
                    Take the first step towards financial freedom with our free consultation.
                </p>
                <a 
                    href="/debt-relief#qualification-form" 
                    class="btn btn-lg bg-white text-[#2d7984] hover:bg-gray-100 font-semibold"
                >
                    Get Your Free Consultation Now
                </a>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Add section styling for better visual hierarchy */
    h2 {
        position: relative;
    }
    
    h2::after {
        content: "";
        position: absolute;
        bottom: -0.75rem;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 3px;
        background-color: var(--color-primary, #2d7984);
        border-radius: 3px;
    }
    
    /* Ensure smooth scrolling for any anchor links */
    @media (min-width: 768px) {
        section {
            scroll-margin-top: 80px;
        }
    }
</style>
