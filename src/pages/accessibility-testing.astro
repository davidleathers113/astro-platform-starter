---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Accessibility Testing - Color Contrast">
    <div class="max-w-4xl mx-auto py-8">
        <h1 class="text-3xl font-bold mb-6">Accessibility Testing - Color Contrast</h1>
        
        <p class="mb-8">
            This page allows you to test and verify color contrast compliance across both light and dark themes. 
            Toggle the theme using the theme switch in the top-right corner to test both modes.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
            <!-- Text Elements -->
            <div class="card p-6">
                <h2 class="text-xl font-bold mb-4">Text Elements</h2>
                
                <div class="space-y-4">
                    <div>
                        <h3 class="text-lg font-medium mb-2">Regular Text</h3>
                        <p>This is standard paragraph text using the primary text color.</p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-2">Muted Text</h3>
                        <p class="text-text-muted">This text uses the muted text color for secondary information.</p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-2">Links</h3>
                        <p>This paragraph contains a <a href="#" class="underline">standard link</a> that should have sufficient contrast.</p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-2">Code Elements</h3>
                        <p>Here is an example of an inline <code>code element</code> that should be readable.</p>
                    </div>
                </div>
            </div>
            
            <!-- Buttons -->
            <div class="card p-6">
                <h2 class="text-xl font-bold mb-4">Buttons & Form Actions</h2>
                
                <div class="space-y-6">
                    <div>
                        <h3 class="text-lg font-medium mb-3">Standard Buttons</h3>
                        <div class="flex flex-wrap gap-3">
                            <button class="btn">Primary Button</button>
                            <button class="btn-secondary">Secondary Button</button>
                            <button class="btn-accent">Accent Button</button>
                            <button class="btn" disabled>Disabled Button</button>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-3">Button Variants</h3>
                        <div class="flex flex-wrap gap-3">
                            <button class="btn-outline">Outline Button</button>
                            <button class="btn-ghost">Ghost Button</button>
                            <button class="btn btn-sm">Small Button</button>
                            <button class="btn btn-lg">Large Button</button>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-3">Icon Buttons</h3>
                        <div class="flex flex-wrap gap-3">
                            <button class="btn btn-with-icon-right">
                                Next
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="9,18 15,12 9,6"></polyline>
                                </svg>
                            </button>
                            <button class="btn-secondary btn-with-icon-left">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="15,18 9,12 15,6"></polyline>
                                </svg>
                                Previous
                            </button>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-3">Form Submit Examples</h3>
                        <div class="space-y-3">
                            <form class="inline-block">
                                <button type="submit" class="btn">Submit Form</button>
                            </form>
                            <form class="inline-block ml-3">
                                <button type="button" class="btn-outline">Cancel</button>
                            </form>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-3">Link Buttons</h3>
                        <div class="flex flex-wrap gap-3">
                            <a href="#" class="btn">Link as Button</a>
                            <a href="#" class="btn-secondary">Secondary Link</a>
                            <a href="#" class="btn-outline">Outline Link</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Form Elements -->
            <div class="card p-6">
                <h2 class="text-xl font-bold mb-4">Form Elements</h2>
                
                <div class="space-y-4">
                    <div>
                        <label for="test-input" class="form-label">Text Input</label>
                        <input 
                            type="text" 
                            id="test-input" 
                            class="w-full p-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md 
                                   text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400
                                   focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400 focus:border-primary-500 dark:focus:border-primary-400
                                   transition-colors duration-200" 
                            placeholder="Placeholder text"
                        >
                    </div>
                    
                    <div>
                        <label for="test-select" class="form-label">Select Dropdown</label>
                        <select 
                            id="test-select" 
                            class="w-full p-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md 
                                   text-gray-900 dark:text-white
                                   focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400 focus:border-primary-500 dark:focus:border-primary-400
                                   transition-colors duration-200"
                        >
                            <option>Option 1</option>
                            <option>Option 2</option>
                            <option>Option 3</option>
                        </select>
                    </div>
                    
                    <div>
                        <label for="test-textarea" class="form-label">Textarea</label>
                        <textarea 
                            id="test-textarea" 
                            class="w-full p-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md 
                                   text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400
                                   focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400 focus:border-primary-500 dark:focus:border-primary-400
                                   transition-colors duration-200 resize-vertical" 
                            placeholder="Placeholder text"
                        ></textarea>
                    </div>
                    
                    <div>
                        <label class="form-label">Disabled Input</label>
                        <input 
                            type="text" 
                            disabled 
                            value="Disabled input" 
                            class="w-full p-2 bg-gray-100 dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md 
                                   text-gray-500 dark:text-gray-400 cursor-not-allowed"
                        >
                    </div>
                </div>
            </div>
            
            <!-- Selection Controls -->
            <div class="card p-6">
                <h2 class="text-xl font-bold mb-4">Selection Controls</h2>
                
                <div class="space-y-6">
                    <div>
                        <h3 class="text-lg font-medium mb-3">Checkboxes</h3>
                        <div class="space-y-3">
                            <div class="flex items-center">
                                <input 
                                    type="checkbox" 
                                    id="checkbox-1" 
                                    class="h-4 w-4 text-[#2d7984] bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 rounded 
                                           focus:ring-2 focus:ring-[#2d7984] dark:focus:ring-[#58cbe0] 
                                           checked:bg-[#2d7984] dark:checked:bg-[#58cbe0] 
                                           checked:border-[#2d7984] dark:checked:border-[#58cbe0]
                                           transition-colors duration-200"
                                >
                                <label for="checkbox-1" class="ml-2 text-gray-900 dark:text-white">Option 1</label>
                            </div>
                            <div class="flex items-center">
                                <input 
                                    type="checkbox" 
                                    id="checkbox-2" 
                                    checked
                                    class="h-4 w-4 text-[#2d7984] bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 rounded 
                                           focus:ring-2 focus:ring-[#2d7984] dark:focus:ring-[#58cbe0] 
                                           checked:bg-[#2d7984] dark:checked:bg-[#58cbe0] 
                                           checked:border-[#2d7984] dark:checked:border-[#58cbe0]
                                           transition-colors duration-200"
                                >
                                <label for="checkbox-2" class="ml-2 text-gray-900 dark:text-white">Option 2 (Checked)</label>
                            </div>
                            <div class="flex items-center">
                                <input 
                                    type="checkbox" 
                                    id="checkbox-3" 
                                    disabled
                                    class="h-4 w-4 text-gray-400 bg-gray-100 dark:bg-gray-800 border-gray-300 dark:border-gray-600 rounded 
                                           cursor-not-allowed opacity-50"
                                >
                                <label for="checkbox-3" class="ml-2 text-gray-500 dark:text-gray-400 cursor-not-allowed">Option 3 (Disabled)</label>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-3">Radio Buttons</h3>
                        <div class="space-y-3">
                            <div class="flex items-center">
                                <input 
                                    type="radio" 
                                    id="radio-1" 
                                    name="radio-group" 
                                    value="option1"
                                    class="h-4 w-4 text-[#2d7984] bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 
                                           focus:ring-2 focus:ring-[#2d7984] dark:focus:ring-[#58cbe0] 
                                           checked:bg-[#2d7984] dark:checked:bg-[#58cbe0] 
                                           checked:border-[#2d7984] dark:checked:border-[#58cbe0]
                                           transition-colors duration-200"
                                >
                                <label for="radio-1" class="ml-2 text-gray-900 dark:text-white">Radio Option 1</label>
                            </div>
                            <div class="flex items-center">
                                <input 
                                    type="radio" 
                                    id="radio-2" 
                                    name="radio-group" 
                                    value="option2"
                                    checked
                                    class="h-4 w-4 text-[#2d7984] bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 
                                           focus:ring-2 focus:ring-[#2d7984] dark:focus:ring-[#58cbe0] 
                                           checked:bg-[#2d7984] dark:checked:bg-[#58cbe0] 
                                           checked:border-[#2d7984] dark:checked:border-[#58cbe0]
                                           transition-colors duration-200"
                                >
                                <label for="radio-2" class="ml-2 text-gray-900 dark:text-white">Radio Option 2 (Selected)</label>
                            </div>
                            <div class="flex items-center">
                                <input 
                                    type="radio" 
                                    id="radio-3" 
                                    name="radio-group" 
                                    value="option3"
                                    disabled
                                    class="h-4 w-4 text-gray-400 bg-gray-100 dark:bg-gray-800 border-gray-300 dark:border-gray-600 
                                           cursor-not-allowed opacity-50"
                                >
                                <label for="radio-3" class="ml-2 text-gray-500 dark:text-gray-400 cursor-not-allowed">Radio Option 3 (Disabled)</label>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-3">Toggle Switch Example</h3>
                        <div class="flex items-center space-x-3">
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" class="sr-only peer" id="toggle-switch">
                                <div class="w-11 h-6 bg-gray-200 dark:bg-gray-700 peer-focus:outline-none 
                                           peer-focus:ring-2 peer-focus:ring-[#2d7984] dark:peer-focus:ring-[#58cbe0] 
                                           rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white 
                                           after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white 
                                           after:rounded-full after:h-5 after:w-5 after:transition-all duration-200
                                           peer-checked:bg-[#2d7984] dark:peer-checked:bg-[#58cbe0]">
                                </div>
                                <span class="ml-3 text-gray-900 dark:text-white">Enable notifications</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Alert States -->
            <div class="card p-6">
                <h2 class="text-xl font-bold mb-4">Alerts & Errors</h2>
                
                <div class="space-y-4">
                    <div>
                        <h3 class="text-lg font-medium mb-2">Error Message</h3>
                        <p class="error-message">This is an error message with proper contrast.</p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-2">Form Field Error</h3>
                        <label class="form-label">Email Address</label>
                        <input 
                            type="text" 
                            class="w-full p-2 bg-white dark:bg-gray-700 border-2 border-red-500 dark:border-red-400 rounded-md 
                                   text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400
                                   focus:outline-none focus:ring-2 focus:ring-red-500 dark:focus:ring-red-400
                                   transition-colors duration-200" 
                            value="invalid.email"
                            aria-invalid="true"
                            aria-describedby="email-error"
                        >
                        <p id="email-error" class="error-message mt-1">Please enter a valid email address.</p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-2">Info Alert</h3>
                        <div class="flex gap-2 p-3 bg-primary text-white rounded">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg>
                            This is an informational alert.
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-medium mb-2">Warning Alert</h3>
                        <div class="flex gap-2 p-3 bg-yellow-700 text-white rounded">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>
                            This is a warning alert.
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card p-6 mb-8">
            <h2 class="text-xl font-bold mb-4">Contrast Testing Tool</h2>
            
            <p class="mb-4">
                Use the built-in contrast testing tool to verify that all color combinations meet WCAG AA requirements.
            </p>
            
            <div class="bg-gray-100 dark:bg-gray-800 p-4 rounded font-mono text-sm mb-4">
                <pre>// Open your browser console and run the test function:
testThemeContrast();</pre>
            </div>
            
            <button id="run-test" class="btn">Run Contrast Tests</button>
            
            <div id="test-results" class="mt-4 p-4 bg-gray-100 dark:bg-gray-800 rounded hidden">
                <h3 class="font-bold mb-2">Test Results:</h3>
                <div id="results-content" class="text-sm font-mono overflow-auto max-h-64"></div>
            </div>
        </div>
    </div>
</Layout>

<script src="/scripts/contrast-tester.js" is:inline></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const runTestButton = document.getElementById('run-test');
        const testResults = document.getElementById('test-results');
        const resultsContent = document.getElementById('results-content');
        
        if (runTestButton && testResults && resultsContent) {
            runTestButton.addEventListener('click', () => {
                // Execute the test
                const results = window.testThemeContrast();
                
                // Prepare result HTML
                const isDarkTheme = document.documentElement.classList.contains('dark') || 
                                document.documentElement.classList.contains('dark-theme');
                
                let html = `<div class="mb-2 font-bold">${isDarkTheme ? 'DARK' : 'LIGHT'} Theme Results:</div>`;
                
                results.forEach(result => {
                    const { name, color1Value, color2Value, ratio, passes } = result;
                    const formattedRatio = ratio.toFixed(2) + ':1';
                    const statusClass = passes ? 'bg-green-100 dark:bg-green-900' : 'bg-red-100 dark:bg-red-900';
                    const statusText = passes ? 'PASS' : 'FAIL';
                    
                    html += `
                        <div class="mb-2 pb-2 border-b border-gray-200 dark:border-gray-700">
                            <div class="flex justify-between items-center">
                                <span>${name}</span>
                                <span class="${statusClass} px-2 py-1 rounded text-xs font-bold">${statusText} (${formattedRatio})</span>
                            </div>
                            <div class="flex gap-2 items-center mt-1">
                                <div class="w-4 h-4 rounded" style="background-color: ${color1Value}"></div>
                                <span class="text-xs">${color1Value}</span>
                                <span>on</span>
                                <div class="w-4 h-4 rounded" style="background-color: ${color2Value}"></div>
                                <span class="text-xs">${color2Value}</span>
                            </div>
                        </div>
                    `;
                });
                
                // Display results
                resultsContent.innerHTML = html;
                testResults.classList.remove('hidden');
            });
        }
    });
</script>
