---
import BlobShape1 from './icons/BlobShape1.astro';
import BlobShape2 from './icons/BlobShape2.astro';
import PhoneIcon from './icons/PhoneIcon.astro';
import ClockIcon from './icons/ClockIcon.astro';
---

<div class="hero-section py-12 md:py-16 lg:py-20 relative bg-background-light dark:bg-background-dark transition-colors duration-300">
    <!-- Background shape decorations (svg) -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <BlobShape1 class="absolute -top-20 -right-20 text-primary-light dark:text-primary opacity-10 transition-colors duration-300" />
        <BlobShape2 class="absolute -bottom-24 -left-24 text-accent-light dark:text-accent opacity-10 transition-colors duration-300" />
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight tracking-tight text-text-light dark:text-text-dark animate-fade-in transition-colors duration-300">
                Break Free From Credit Card Debt 
                <span class="text-primary-light dark:text-primary transition-colors duration-300">Save Up To 50%</span>
            </h1>
            
            <p class="text-xl md:text-2xl text-text-muted-light dark:text-text-muted-dark mb-8 animate-fade-in-delay-1 transition-colors duration-300">
                Reduce Your Debt By Thousands | Become Debt-Free In 
                <span class="text-primary-light dark:text-primary font-semibold transition-colors duration-300">12-36 Months</span>
            </p>
            
            <div class="relative mb-12 max-w-3xl mx-auto">
                <!-- Pulsing background for emphasis -->
                <div class="absolute -inset-1 bg-gradient-to-r from-primary/20 via-primary/30 to-primary/20 dark:from-primary-light/20 dark:via-primary-light/30 dark:to-primary-light/20 rounded-lg blur-md transition-colors duration-300"></div>
                <p class="relative bg-background-form-light dark:bg-background-form-dark text-lg md:text-xl text-text-muted-light dark:text-text-muted-dark p-6 rounded-lg shadow-md mb-8 animate-fade-in-delay-2 transition-colors duration-300 border border-border-light dark:border-border-dark">
                    Are you struggling with <span class="font-bold text-text-light dark:text-text-dark transition-colors duration-300">$15,000+ in credit card debt</span>? Our professional debt settlement program can help you reduce what you owe and become debt-free faster than making minimum payments.
                </p>
            </div>
            
            <div class="flex flex-col sm:flex-row justify-center gap-6 mb-6 animate-fade-in-delay-3">
                <a href="#consultation" class="btn btn-lg group relative overflow-hidden bg-primary hover:bg-primary-hover active:bg-primary-active text-text-button transition-all duration-200">
                    <span class="relative z-10">Get Your Free Consultation Now</span>
                    <div class="absolute inset-0 bg-gradient-to-r from-primary-light/20 via-secondary/20 to-primary-light/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </a>
                <a 
                    href="tel:+18005551234" 
                    class="nav-link inline-flex items-center justify-center gap-2 text-text-muted-light dark:text-text-muted-dark hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-all duration-300 cursor-pointer rounded-lg px-4 py-2 hover:bg-[#2d7984]/5 dark:hover:bg-[#58cbe0]/10 group"
                    aria-label="Call (800) 555-1234"
                >
                    <PhoneIcon class="text-text-muted-light dark:text-text-muted-dark group-hover:text-[#2d7984] dark:group-hover:text-[#58cbe0] transition-colors duration-300 group-hover:scale-110 transform" />
                    <span class="text-lg font-medium group-hover:font-semibold transition-all duration-300">(800) 555-1234</span>
                </a>
            </div>
            
            <p class="text-sm text-text-muted-light dark:text-text-muted-dark animate-fade-in-delay-3 transition-colors duration-300">
                <span class="inline-flex items-center gap-1">
                    <ClockIcon width="16" height="16" class="text-text-muted-light dark:text-text-muted-dark transition-colors duration-300" />
                    Available 9:00am - 8:00pm EST, 7 days a week
                </span>
            </p>
        </div>
    </div>
</div>

<style>
    /* Hero section with theme-aware background gradients */
    .hero-section {
        position: relative;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 20%, rgba(var(--color-primary-rgb), 0.03) 0%, transparent 50%),
            radial-gradient(circle at 80% 80%, rgba(var(--color-accent-rgb), 0.03) 0%, transparent 50%);
        pointer-events: none;
        transition: background var(--theme-transition-duration) var(--theme-transition-easing);
    }
    
    .dark .hero-section::before {
        background: 
            radial-gradient(circle at 20% 20%, rgba(var(--color-primary-light-rgb), 0.05) 0%, transparent 50%),
            radial-gradient(circle at 80% 80%, rgba(var(--color-accent-rgb), 0.05) 0%, transparent 50%);
    }
    
    /* Enhanced button styling with theme-aware shadows */
    .btn-lg {
        position: relative;
        transition: 
            transform 0.2s ease, 
            box-shadow 0.2s ease,
            background-color var(--theme-transition-duration) var(--theme-transition-easing);
    }
    
    .btn-lg:hover {
        transform: translateY(-2px);
        box-shadow: 
            0 6px 15px -3px rgba(var(--color-primary-rgb), 0.4),
            0 2px 8px -1px rgba(var(--color-primary-rgb), 0.2);
    }
    
    .dark .btn-lg:hover {
        box-shadow: 
            0 6px 15px -3px rgba(var(--color-primary-light-rgb), 0.3),
            0 2px 8px -1px rgba(var(--color-primary-light-rgb), 0.15);
    }
    
    .btn-lg:active {
        transform: translateY(0);
        box-shadow: 
            0 2px 4px -1px rgba(var(--color-primary-rgb), 0.3);
    }
    
    .dark .btn-lg:active {
        box-shadow: 
            0 2px 4px -1px rgba(var(--color-primary-light-rgb), 0.2);
    }
    
    /* Smooth transitions for all hero elements */
    .hero-section * {
        transition: 
            color var(--theme-transition-duration) var(--theme-transition-easing),
            background-color var(--theme-transition-duration) var(--theme-transition-easing),
            border-color var(--theme-transition-duration) var(--theme-transition-easing);
    }
    
    @media (prefers-reduced-motion: reduce) {
        .btn-lg:hover {
            transform: none;
        }
        
        .hero-section::before {
            transition: none;
        }
        
        .hero-section * {
            transition: none;
        }
    }
</style>