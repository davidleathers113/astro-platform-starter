---
// Logo.astro - Updated to use the debt-freedom-logo.svg
interface Props {
  width?: string;
  height?: string;
  class?: string;
}

// The original SVG dimensions are 502x560, so let's maintain the aspect ratio
const { width = "90", height = "100", class: className = "" } = Astro.props;
---

<img 
  src="/images/debt-freedom-logo.svg" 
  alt="Debt Freedom Toolkit Logo" 
  width={width} 
  height={height} 
  class={`logo ${className}`}
/>

<style>
  .logo {
    display: inline-block;
    height: auto;
    max-height: 50px; /* Constrain height for header */
    width: auto;
  }
  
  /* Adjust logo size in the footer to be slightly smaller */
  :global(footer) .logo {
    max-height: 45px;
  }
</style>