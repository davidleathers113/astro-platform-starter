---
import PhoneIcon from './icons/PhoneIcon.astro';
import CheckIcon from './icons/CheckIcon.astro';
import TrustLogo1 from './icons/TrustLogo1.astro';
import TrustLogo2 from './icons/TrustLogo2.astro';
import TrustLogo3 from './icons/TrustLogo3.astro';
import TrustLogo4 from './icons/TrustLogo4.astro';
---

<div class="cta-section py-16 md:py-20 relative" id="cta">
    <!-- Background decorations -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-primary/5 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
        <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-accent/5 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10 max-w-6xl">
        <div class="cta-card bg-primary-dark rounded-2xl overflow-hidden shadow-[0_20px_45px_-10px_rgba(0,0,0,0.35)] lg:hover:shadow-[0_35px_60px_-15px_rgba(0,0,0,0.45)] transform-gpu hover:-translate-y-1 transition-shadow transition-transform">
            <div class="p-8 md:p-12 lg:p-16">
                <div class="grid grid-cols-1 lg:grid-cols-[1fr_420px] gap-y-12 gap-x-20 items-start">
                    <!-- CTA Content -->
                    <div>
                        <h2 class="text-3xl md:text-4xl text-white font-extrabold mb-6 leading-tight md:leading-snug">Ready to Start Your Debt-Free Journey?</h2>
                        <p class="text-base md:text-lg text-white/95 mb-10 max-w-md">
                            Our debt relief specialists are standing by to help you reduce your debt and regain control of your finances.
                        </p>
                        
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="#consultation" class="relative cta-button bg-white text-primary hover:bg-white/90 focus:ring-2 focus:ring-white/60 ring-offset-2 transition duration-200 ease-out py-4 px-8 rounded-lg text-center font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1 before:content-[''] before:absolute before:inset-0 before:rounded-lg before:bg-gradient-to-r before:from-primary-light/30 before:to-primary-dark/0 before:transition-opacity hover:before:opacity-100 before:opacity-0">
                                Get Your Free Consultation
                            </a>
                            
                            <a href="tel:8005551234" class="btn group cta-phone-button flex items-center justify-center gap-2 bg-transparent border-2 border-white text-white hover:bg-white/20 active:scale-95 focus:ring-2 focus:ring-white/60 ring-offset-2 transition duration-200 ease-out py-4 px-8 rounded-lg text-center font-bold text-lg">
                                <PhoneIcon class="w-5 h-5 stroke-current opacity-80 group-hover:opacity-100" />
                                Call (800) 555-1234
                            </a>
                        </div>
                    </div>
                    
                    <!-- CTA Features List -->
                    <div class="cta-features relative bg-primary/20 backdrop-blur-sm rounded-xl p-6 md:p-8 before:absolute before:inset-0 before:rounded-xl before:ring-1 before:ring-white/5 before:pointer-events-none order-2 lg:order-none self-start">
                        <h3 class="text-xl text-white font-bold mb-6">Why Choose Debt Freedom Toolkit?</h3>
                        
                        <ul class="space-y-5">
                            <li class="flex items-start gap-4">
                                <div class="feature-icon flex-shrink-0 pt-0.5 bg-white/20 rounded-full p-1">
                                    <CheckIcon class="text-white w-4 h-4 md:w-5 md:h-5" />
                                </div>
                                <div>
                                    <h4 class="text-white font-medium">No Upfront Fees</h4>
                                    <p class="text-white/95 text-sm md:text-base">You don't pay until we successfully negotiate your debt.</p>
                                </div>
                            </li>
                            
                            <li class="flex items-start gap-4">
                                <div class="feature-icon flex-shrink-0 pt-0.5 bg-white/20 rounded-full p-1">
                                    <CheckIcon class="text-white w-4 h-4 md:w-5 md:h-5" />
                                </div>
                                <div>
                                    <h4 class="text-white font-medium">Expert Negotiators</h4>
                                    <p class="text-white/95 text-sm md:text-base">Our team has settled over $1.2 billion in debt for our clients.</p>
                                </div>
                            </li>
                            
                            <li class="flex items-start gap-4">
                                <div class="feature-icon flex-shrink-0 pt-0.5 bg-white/20 rounded-full p-1">
                                    <CheckIcon class="text-white w-4 h-4 md:w-5 md:h-5" />
                                </div>
                                <div>
                                    <h4 class="text-white font-medium">Personalized Approach</h4>
                                    <p class="text-white/95 text-sm md:text-base">Custom solutions based on your unique financial situation.</p>
                                </div>
                            </li>
                            
                            <li class="flex items-start gap-4">
                                <div class="feature-icon flex-shrink-0 pt-0.5 bg-white/20 rounded-full p-1">
                                    <CheckIcon class="text-white w-4 h-4 md:w-5 md:h-5" />
                                </div>
                                <div>
                                    <h4 class="text-white font-medium">Faster Than DIY</h4>
                                    <p class="text-white/95 text-sm md:text-base">Become debt-free in 24-48 months versus 10+ years of minimum payments.</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Additional Trust Elements -->
        <div class="trust-elements mt-16 text-center">
            <p class="text-lg text-text-muted font-medium mb-6">Trusted & Featured By</p>
            
            <div class="flex flex-wrap justify-center items-center gap-x-16 gap-y-8">
                <div class="trust-logo h-12 flex-shrink-0 opacity-60 hover:opacity-100 transition filter grayscale">
                    <TrustLogo1 class="text-text-muted" />
                </div>
                
                <div class="trust-logo h-12 flex-shrink-0 opacity-60 hover:opacity-100 transition filter grayscale">
                    <TrustLogo2 class="text-text-muted" />
                </div>
                
                <div class="trust-logo h-12 flex-shrink-0 opacity-60 hover:opacity-100 transition filter grayscale">
                    <TrustLogo3 class="text-text-muted" />
                </div>
                
                <div class="trust-logo h-12 flex-shrink-0 opacity-60 hover:opacity-100 transition filter grayscale">
                    <TrustLogo4 class="text-text-muted" />
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .cta-button, .cta-phone-button {
        @apply transition duration-200 ease-out ring-offset-2 focus:ring-2 focus:ring-white/60;
    }
    
    @media (prefers-reduced-motion: reduce) {
        .cta-button:hover, .cta-phone-button:hover {
            transform: none !important;
        }
    }
    
    .feature-icon {
        transition: all 0.2s ease;
    }
    
    li:hover .feature-icon {
        transform: scale(1.05);
        background-color: rgba(255, 255, 255, 0.3);
    }
    
    @media (prefers-reduced-motion: reduce) {
        li:hover .feature-icon {
            transform: none;
        }
    }
</style>