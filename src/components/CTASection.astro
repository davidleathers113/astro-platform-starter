---
import PhoneIcon from './icons/PhoneIcon.astro';
import CheckIcon from './icons/CheckIcon.astro';
import TrustLogo1 from './icons/TrustLogo1.astro';
import TrustLogo2 from './icons/TrustLogo2.astro';
import TrustLogo3 from './icons/TrustLogo3.astro';
import TrustLogo4 from './icons/TrustLogo4.astro';
---

<div class="cta-section py-16 md:py-20 relative bg-white dark:bg-gray-900 transition-colors duration-300" id="cta">
    <!-- Background decorations -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-[#2d7984]/5 dark:bg-[#58cbe0]/10 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2 transition-colors duration-300"></div>
        <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-[#58cbe0]/5 dark:bg-[#58cbe0]/10 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2 transition-colors duration-300"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10 max-w-6xl">
        <div class="cta-card bg-[#1d5058] dark:bg-[#2d7984] rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transform-gpu hover:-translate-y-1 transition-all duration-300 border border-gray-200/20 dark:border-gray-700/20">
            <div class="p-8 md:p-12 lg:p-16">
                <div class="grid grid-cols-1 lg:grid-cols-[1fr_420px] gap-y-12 gap-x-20 items-start">
                    <!-- CTA Content -->
                    <div>
                        <h2 class="text-3xl md:text-4xl text-white font-extrabold mb-6 leading-tight md:leading-snug transition-colors duration-300">
                            Ready to Start Your Debt-Free Journey?
                        </h2>
                        <p class="text-base md:text-lg text-white/95 mb-10 max-w-md transition-colors duration-300">
                            Our debt relief specialists are standing by to help you reduce your debt and regain control of your finances.
                        </p>
                        
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="#consultation" class="relative cta-button bg-white dark:bg-gray-900 text-[#2d7984] dark:text-[#58cbe0] hover:bg-white/90 dark:hover:bg-gray-900/90 focus:ring-2 focus:ring-white/60 dark:focus:ring-gray-900/60 ring-offset-2 ring-offset-[#1d5058] dark:ring-offset-[#2d7984] transition-all duration-200 ease-out py-4 px-8 rounded-lg text-center font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                                Get Your Free Consultation
                            </a>
                            
                            <a href="tel:8005551234" class="btn group cta-phone-button flex items-center justify-center gap-2 bg-white/10 backdrop-blur-sm border-2 border-white/30 text-white hover:bg-white/20 hover:border-white/50 active:scale-95 focus:ring-2 focus:ring-white/60 ring-offset-2 ring-offset-[#1d5058] transition-all duration-200 ease-out py-4 px-8 rounded-lg text-center font-bold text-lg shadow-lg hover:shadow-xl">
                                <PhoneIcon class="w-5 h-5 stroke-current opacity-90 group-hover:opacity-100 group-hover:scale-110 transition-all duration-200" />
                                Call (800) 555-1234
                            </a>
                        </div>
                    </div>
                    
                    <!-- CTA Features List -->
                    <div class="cta-features relative bg-[#2d7984]/20 dark:bg-[#58cbe0]/20 backdrop-blur-sm rounded-xl p-6 md:p-8 border border-white/10 dark:border-gray-900/10 order-2 lg:order-none self-start transition-colors duration-300">
                        <h3 class="text-xl text-white font-bold mb-6 transition-colors duration-300">
                            Why Choose Debt Freedom Toolkit?
                        </h3>
                        
                        <ul class="space-y-5">
                            <li class="flex items-start gap-4">
                                <div class="feature-icon flex-shrink-0 pt-0.5 bg-white/20 dark:bg-gray-900/20 rounded-full p-1 transition-colors duration-300">
                                    <CheckIcon class="text-white w-4 h-4 md:w-5 md:h-5 transition-colors duration-300" />
                                </div>
                                <div>
                                    <h4 class="text-white font-medium transition-colors duration-300">No Upfront Fees</h4>
                                    <p class="text-white/95 text-sm md:text-base transition-colors duration-300">You don't pay until we successfully negotiate your debt.</p>
                                </div>
                            </li>
                            
                            <li class="flex items-start gap-4">
                                <div class="feature-icon flex-shrink-0 pt-0.5 bg-white/20 dark:bg-gray-900/20 rounded-full p-1 transition-colors duration-300">
                                    <CheckIcon class="text-white w-4 h-4 md:w-5 md:h-5 transition-colors duration-300" />
                                </div>
                                <div>
                                    <h4 class="text-white font-medium transition-colors duration-300">Expert Negotiators</h4>
                                    <p class="text-white/95 text-sm md:text-base transition-colors duration-300">Our team has settled over $1.2 billion in debt for our clients.</p>
                                </div>
                            </li>
                            
                            <li class="flex items-start gap-4">
                                <div class="feature-icon flex-shrink-0 pt-0.5 bg-white/20 dark:bg-gray-900/20 rounded-full p-1 transition-colors duration-300">
                                    <CheckIcon class="text-white w-4 h-4 md:w-5 md:h-5 transition-colors duration-300" />
                                </div>
                                <div>
                                    <h4 class="text-white font-medium transition-colors duration-300">Personalized Approach</h4>
                                    <p class="text-white/95 text-sm md:text-base transition-colors duration-300">Custom solutions based on your unique financial situation.</p>
                                </div>
                            </li>
                            
                            <li class="flex items-start gap-4">
                                <div class="feature-icon flex-shrink-0 pt-0.5 bg-white/20 dark:bg-gray-900/20 rounded-full p-1 transition-colors duration-300">
                                    <CheckIcon class="text-white w-4 h-4 md:w-5 md:h-5 transition-colors duration-300" />
                                </div>
                                <div>
                                    <h4 class="text-white font-medium transition-colors duration-300">Faster Than DIY</h4>
                                    <p class="text-white/95 text-sm md:text-base transition-colors duration-300">Become debt-free in 24-48 months versus 10+ years of minimum payments.</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Additional Trust Elements -->
        <div class="trust-elements mt-16 text-center">
            <p class="text-lg text-gray-600 dark:text-gray-300 font-medium mb-6 transition-colors duration-300">Trusted & Featured By</p>
            
            <div class="flex flex-wrap justify-center items-center gap-x-16 gap-y-8">
                <div class="trust-logo h-12 flex-shrink-0 opacity-60 hover:opacity-100 transition-opacity duration-300 filter grayscale hover:grayscale-0">
                    <TrustLogo1 class="text-gray-600 dark:text-gray-300 transition-colors duration-300" />
                </div>
                
                <div class="trust-logo h-12 flex-shrink-0 opacity-60 hover:opacity-100 transition-opacity duration-300 filter grayscale hover:grayscale-0">
                    <TrustLogo2 class="text-gray-600 dark:text-gray-300 transition-colors duration-300" />
                </div>
                
                <div class="trust-logo h-12 flex-shrink-0 opacity-60 hover:opacity-100 transition-opacity duration-300 filter grayscale hover:grayscale-0">
                    <TrustLogo3 class="text-gray-600 dark:text-gray-300 transition-colors duration-300" />
                </div>
                
                <div class="trust-logo h-12 flex-shrink-0 opacity-60 hover:opacity-100 transition-opacity duration-300 filter grayscale hover:grayscale-0">
                    <TrustLogo4 class="text-gray-600 dark:text-gray-300 transition-colors duration-300" />
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Theme-aware CTA card styling */
    .cta-card {
        background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
        box-shadow: 
            0 20px 45px -10px rgba(0, 0, 0, 0.25),
            0 10px 25px -5px rgba(var(--color-primary-rgb), 0.1);
        transition: 
            transform var(--theme-transition-duration) var(--theme-transition-easing),
            box-shadow var(--theme-transition-duration) var(--theme-transition-easing),
            background var(--theme-transition-duration) var(--theme-transition-easing);
    }
    
    .dark .cta-card {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
        box-shadow: 
            0 20px 45px -10px rgba(0, 0, 0, 0.4),
            0 10px 25px -5px rgba(var(--color-primary-light-rgb), 0.15);
    }
    
    .cta-card:hover {
        box-shadow: 
            0 35px 60px -15px rgba(0, 0, 0, 0.3),
            0 15px 35px -10px rgba(var(--color-primary-rgb), 0.15);
    }
    
    .dark .cta-card:hover {
        box-shadow: 
            0 35px 60px -15px rgba(0, 0, 0, 0.5),
            0 15px 35px -10px rgba(var(--color-primary-light-rgb), 0.2);
    }
    
    /* Enhanced button styles with theme awareness */
    .cta-button {
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(var(--color-background-primary-rgb), 0.2);
        box-shadow: 
            0 4px 15px rgba(0, 0, 0, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        transition: all var(--theme-transition-duration) var(--theme-transition-easing);
        text-decoration: none !important; /* Remove blue underlines */
        color: inherit !important; /* Use the intended colors */
    }
    
    .cta-button:visited {
        color: inherit !important; /* Ensure visited links don't change color */
    }
    
    .cta-button:hover {
        box-shadow: 
            0 8px 25px rgba(0, 0, 0, 0.15),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }
    
    .cta-phone-button {
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        transition: all var(--theme-transition-duration) var(--theme-transition-easing);
        text-decoration: none !important; /* Remove blue underlines */
        color: white !important; /* Force white text for visibility */
        border-color: rgba(255, 255, 255, 0.3) !important;
        box-shadow: 
            0 4px 15px rgba(0, 0, 0, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
    
    .cta-phone-button:visited {
        color: white !important; /* Ensure visited links stay white */
    }
    
    .cta-phone-button:hover {
        color: white !important; /* Keep white text on hover */
        background-color: rgba(255, 255, 255, 0.2) !important;
        border-color: rgba(255, 255, 255, 0.5) !important;
        box-shadow: 
            0 8px 25px rgba(0, 0, 0, 0.15),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
        transform: translateY(-1px) !important;
    }
    
    /* Ensure all CTA section links don't have underlines */
    .cta-section a:not(.btn) {
        text-decoration: none !important;
    }
    
    .cta-section a:not(.btn):hover {
        text-decoration: none !important;
    }
    
    /* Feature icons with enhanced theme transitions */
    .feature-icon {
        transition: 
            transform 0.2s ease,
            background-color var(--theme-transition-duration) var(--theme-transition-easing);
    }
    
    li:hover .feature-icon {
        transform: scale(1.05);
        background-color: rgba(var(--color-background-primary-rgb), 0.3);
    }
    
    .dark li:hover .feature-icon {
        background-color: rgba(var(--color-background-primary-rgb), 0.25);
    }
    
    /* Trust logos with smooth transitions */
    .trust-logo {
        transition: 
            opacity var(--theme-transition-duration) var(--theme-transition-easing),
            filter var(--theme-transition-duration) var(--theme-transition-easing);
    }
    
    .trust-logo:hover {
        filter: grayscale(0%) brightness(1.1);
    }
    
    /* CTA features background enhancement */
    .cta-features {
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        box-shadow: 
            inset 0 1px 0 rgba(var(--color-background-primary-rgb), 0.1),
            0 4px 15px rgba(0, 0, 0, 0.05);
        transition: 
            background-color var(--theme-transition-duration) var(--theme-transition-easing),
            border-color var(--theme-transition-duration) var(--theme-transition-easing);
    }
    
    .dark .cta-features {
        box-shadow: 
            inset 0 1px 0 rgba(var(--color-background-primary-rgb), 0.05),
            0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    /* Accessibility improvements */
    @media (prefers-reduced-motion: reduce) {
        .cta-card,
        .cta-button,
        .cta-phone-button,
        .feature-icon,
        .trust-logo {
            transition: none !important;
        }
        
        .cta-card:hover,
        .cta-button:hover,
        .cta-phone-button:hover {
            transform: none !important;
        }
        
        li:hover .feature-icon {
            transform: none !important;
        }
    }
    
    /* High contrast mode adjustments */
    @media (prefers-contrast: high) {
        .cta-card {
            border: 2px solid var(--color-border-strong);
        }
        
        .cta-features {
            border: 1px solid var(--color-border-default);
        }
    }
</style>