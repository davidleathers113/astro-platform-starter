---
interface Props {
    class?: string;
    width?: string;
    height?: string;
}

const { class: className = "", width = "120", height = "40" } = Astro.props;
---

<svg xmlns="http://www.w3.org/2000/svg" width={width} height={height} viewBox="0 0 120 40" class={className}>
  <circle fill="currentColor" cx="20" cy="20" r="8"/>
  <text x="35" y="24" font-family="Arial" font-size="12" font-weight="bold" fill="currentColor">BUSINESS</text>
  <text x="35" y="14" font-family="Arial" font-size="8" fill="currentColor">NATIONAL</text>
</svg>