---
interface Props {
    class?: string;
    width?: string;
    height?: string;
}

const { class: className = "chevron-icon text-primary", width = "16", height = "16" } = Astro.props;
---

<svg 
  xmlns="http://www.w3.org/2000/svg" 
  viewBox="0 0 24 24" 
  fill="none" 
  stroke="currentColor" 
  stroke-width="1.5" 
  stroke-linecap="round" 
  stroke-linejoin="round" 
  class={className}
  width={width}
  height={height}
>
  <path d="M6 9l6 6 6-6"></path>
</svg>

<style>
  .chevron-icon {
    transition: transform 0.3s ease;
    transform-origin: center;
  }
</style>