---
interface Props {
    class?: string;
    width?: string;
    height?: string;
    patternId?: string;
}

const { class: className = "", width = "100%", height = "100%", patternId = "dots-pattern" } = Astro.props;
---

<svg width={width} height={height} xmlns="http://www.w3.org/2000/svg" class={className}>
    <defs>
        <pattern id={patternId} x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
            <circle cx="1" cy="1" r="1" fill="currentColor" class="text-primary/40" />
        </pattern>
    </defs>
    <rect width="100%" height="100%" fill={`url(#${patternId})`} />
</svg>