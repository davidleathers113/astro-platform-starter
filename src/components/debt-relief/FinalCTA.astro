---
// src/components/debt-relief/FinalCTA.astro
import ModernPhoneIcon from '../icons/ModernPhoneIcon.astro';
---

<div class="p-10 text-center bg-primary rounded-lg shadow-xl border-2 border-primary transform hover:scale-[1.01] transition-all duration-300">
    <h2 class="mb-6 text-3xl font-bold text-primary-content">Ready To Take Control Of Your Debt?</h2>
    <p class="mb-8 text-lg text-primary-content font-medium">Get Your Free Debt Relief Consultation</p>
    
    <div class="flex flex-col items-center gap-6">
        <a 
            href="#qualification-form" 
            class="btn btn-lg bg-primary-content text-primary hover:opacity-90 shadow-md hover:shadow-lg transform hover:-translate-y-1 transition-all"
        >
            Check If You Qualify
        </a>
        <div class="text-primary-content font-medium">OR</div>
        <a 
            href="tel:8005551234" 
            class="btn text-2xl font-bold text-primary-content hover:underline transition-all flex items-center gap-2"
        >
            <ModernPhoneIcon class="w-6 h-6" />
            (800) 555-1234
        </a>
    </div>
    
    <p class="mt-6 text-primary-content text-sm">Available 9:00am - 8:00pm EST, 7 days a week</p>
</div>