---
// src/components/debt-relief/TestimonialItem.astro
import ModernQuoteIcon from '../icons/ModernQuoteIcon.astro';

interface Props {
    quote: string;
    name: string;
    location: string;
    debtDetails: string;
}

const { quote, name, location, debtDetails } = Astro.props;
---

<div class="testimonial-card bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 p-6 rounded-lg shadow-lg dark:shadow-gray-900 hover:shadow-xl hover:dark:shadow-gray-900 transition-all duration-300">
    <div class="relative z-10">
        <!-- Quote Icon -->
        <div class="mb-4">
            <span class="testimonial-quote-wrapper">
                <ModernQuoteIcon class="testimonial-quote-icon text-primary opacity-40" width="2.5rem" height="2.5rem" />
            </span>
        </div>
        
        <!-- Testimonial Quote -->
        <blockquote class="mb-4 italic text-gray-900 dark:text-white text-lg leading-relaxed transition-colors duration-300">{quote}</blockquote>
        
        <!-- Client Information -->
        <div class="mt-6 pt-4 border-t border-gray-200 dark:border-gray-700 transition-colors duration-300">
            <div class="font-bold text-primary">- {name}, {location}</div>
            <div class="text-sm text-gray-600 dark:text-gray-300 mt-2 transition-colors duration-300">{debtDetails}</div>
        </div>
    </div>
</div>

<style>
    .testimonial-card {
        position: relative;
        overflow: hidden;
        transform: translateZ(0);
        will-change: transform, box-shadow;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .testimonial-card:hover {
        transform: translateY(-2px);
    }
    
    blockquote {
        position: relative;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
    }
    
    /* Dark mode text shadow for better readability */
    .dark blockquote {
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
    }
    
    .testimonial-quote-wrapper {
        display: block;
        position: relative;
        width: 2.5rem;
        height: 2.5rem;
    }
    
    .testimonial-quote-icon {
        max-width: 100%;
        max-height: 100%;
    }
    
    @media (prefers-reduced-motion: reduce) {
        .testimonial-card:hover {
            transform: none;
        }
    }
</style>