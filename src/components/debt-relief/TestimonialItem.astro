    <div class="relative z-10">
        <!-- Quote Icon -->
        <div class="mb-4">
            <span class="testimonial-quote-wrapper">
                <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    viewBox="0 0 24 24" 
                    fill="currentColor" 
                    class="testimonial-quote-icon text-primary opacity-40"
                    aria-hidden="true"
                >
