---
// src/components/debt-relief/ProcessStep.astro
interface Props {
    stepNumber: number;
    title: string;
    description: string;
}

const { stepNumber, title, description } = Astro.props;
---

<div class="flex flex-col items-center text-center p-6 form-container rounded-lg bg-background-form text-text shadow-lg border border-border hover:shadow-xl transition-all">
    <div class="flex items-center justify-center w-16 h-16 mb-6 text-xl font-bold text-primary-content bg-primary rounded-full shadow-md transform hover:scale-110 transition-all">
        {stepNumber}
    </div>
    <h3 class="mb-4 text-2xl font-semibold">{title}</h3>
    <p class="text-text-muted leading-relaxed">{description}</p>
</div>
