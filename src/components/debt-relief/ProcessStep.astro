---
// src/components/debt-relief/ProcessStep.astro
interface Props {
    stepNumber: number;
    title: string;
    description: string;
}

const { stepNumber, title, description } = Astro.props;
---

<div class="flex flex-col items-center text-center">
    <div class="flex items-center justify-center w-16 h-16 mb-4 text-xl font-bold text-primary-content bg-primary rounded-full">
        {stepNumber}
    </div>
    <h3 class="mb-3 text-xl font-semibold">{title}</h3>
    <p class="text-text-muted">{description}</p>
</div>
