---
import Logo from "./Logo.astro";
import FacebookIcon from "./icons/FacebookIcon.astro";
import TwitterIcon from "./icons/TwitterIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import PhoneIcon from "./icons/PhoneIcon.astro";
import EmailIcon from "./icons/EmailIcon.astro";
import LocationIcon from "./icons/LocationIcon.astro";
import ClockIcon from "./icons/ClockIcon.astro";
---

<footer class="footer-section pt-16 pb-12 sm:pt-24 sm:pb-16 relative">
    <div class="container mx-auto px-4">
        <div class="mb-12">
            <slot />
        </div>
        
        <div class="footer-content grid grid-cols-1 md:grid-cols-4 gap-10 mb-16">
            <!-- Company Info -->
            <div class="col-span-1 md:col-span-1">
                <div class="mb-6">
                    <a href="/" class="inline-block" aria-label="Debt Freedom Toolkit">
                        <Logo />
                    </a>
                </div>
                <p class="text-gray-600 dark:text-gray-300 mb-6">Helping Americans overcome credit card debt and regain financial freedom since 2010.</p>
                <div class="flex space-x-4">
                    <a href="#" class="social-icon bg-[#2d7984]/10 hover:bg-[#2d7984]/20 text-[#2d7984] dark:text-[#58cbe0] w-10 h-10 rounded-full flex items-center justify-center transition-colors" aria-label="Facebook">
                        <FacebookIcon />
                    </a>
                    <a href="#" class="social-icon bg-[#2d7984]/10 hover:bg-[#2d7984]/20 text-[#2d7984] dark:text-[#58cbe0] w-10 h-10 rounded-full flex items-center justify-center transition-colors" aria-label="Twitter">
                        <TwitterIcon />
                    </a>
                    <a href="#" class="social-icon bg-[#2d7984]/10 hover:bg-[#2d7984]/20 text-[#2d7984] dark:text-[#58cbe0] w-10 h-10 rounded-full flex items-center justify-center transition-colors" aria-label="LinkedIn">
                        <LinkedInIcon />
                    </a>
                    <a href="#" class="social-icon bg-[#2d7984]/10 hover:bg-[#2d7984]/20 text-[#2d7984] dark:text-[#58cbe0] w-10 h-10 rounded-full flex items-center justify-center transition-colors" aria-label="Instagram">
                        <InstagramIcon />
                    </a>
                </div>
            </div>
            
            <!-- Quick Links -->
            <div class="col-span-1">
                <h4 class="text-lg font-bold mb-6 text-gray-900 dark:text-white">Quick Links</h4>
                <ul class="space-y-4">
                    <li><a href="/" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">Home</a></li>
                    <li><a href="#benefits" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">How It Works</a></li>
                    <li><a href="#testimonials" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">Success Stories</a></li>
                    <li><a href="/about" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">About Us</a></li>
                    <li><a href="/blog" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">Debt Relief Blog</a></li>
                </ul>
            </div>
            
            <!-- Legal & Resources -->
            <div class="col-span-1">
                <h4 class="text-lg font-bold mb-6 text-gray-900 dark:text-white">Legal & Resources</h4>
                <ul class="space-y-4">
                    <li><a href="/privacy-policy" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">Privacy Policy</a></li>
                    <li><a href="/terms-of-service" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">Terms of Service</a></li>
                    <li><a href="/debt-calculator" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">Debt Calculator</a></li>
                    <li><a href="/faq" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">FAQ</a></li>
                    <li><a href="/sitemap" class="text-gray-600 dark:text-gray-300 hover:text-[#2d7984] dark:hover:text-[#58cbe0] transition-colors">Sitemap</a></li>
                </ul>
            </div>
            
            <!-- Contact Information -->
            <div class="col-span-1">
                <h4 class="text-lg font-bold mb-6 text-gray-900 dark:text-white">Contact Us</h4>
                <ul class="space-y-4">
                    <li class="flex items-start gap-3">
                        <PhoneIcon class="text-[#2d7984] dark:text-[#58cbe0] mt-1" />
                        <span class="text-gray-600 dark:text-gray-300">(800) 555-1234</span>
                    </li>
                    <li class="flex items-start gap-3">
                        <EmailIcon class="text-[#2d7984] dark:text-[#58cbe0] mt-1" />
                        <span class="text-gray-600 dark:text-gray-300">support@debtfreedomtoolkit.com</span>
                    </li>
                    <li class="flex items-start gap-3">
                        <LocationIcon class="text-[#2d7984] dark:text-[#58cbe0] mt-1" />
                        <span class="text-gray-600 dark:text-gray-300">123 Financial District<br>Suite 456<br>New York, NY 10001</span>
                    </li>
                    <li class="flex items-start gap-3">
                        <ClockIcon class="text-[#2d7984] dark:text-[#58cbe0] mt-1" />
                        <span class="text-gray-600 dark:text-gray-300">Mon-Fri: 9:00am - 8:00pm EST<br>Sat-Sun: 10:00am - 6:00pm EST</span>
                    </li>
                </ul>
            </div>
        </div>
        
        <!-- Disclaimer & Copyright -->
        <div class="border-t border-gray-200 dark:border-gray-700 pt-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div class="text-xs text-gray-600 dark:text-gray-300">
                    <p class="mb-2"><strong>Disclaimer:</strong> Debt Freedom Toolkit is not a lender or debt settlement company. We do not provide financial advice or credit repair services. Results vary by individual.</p>
                    <p>This website is for informational purposes only and is not an offer or solicitation for debt settlement services.</p>
                </div>
                <div class="text-xs text-gray-600 dark:text-gray-300 md:text-right">
                    <p class="mb-2"><strong>Security:</strong> This website is secured using 256-bit encryption to protect your personal information.</p>
                    <p>BBB Accredited Business - A+ Rating | AFCC Member | IAPDA Certified</p>
                </div>
            </div>
            
            <div class="flex flex-col md:flex-row md:justify-between items-center">
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 md:mb-0">Â© {new Date().getFullYear()} DebtFreedom Financial Solutions LLC. All rights reserved.</p>
                
                <div class="payment-methods flex gap-3">
                    <span class="text-gray-600 dark:text-gray-300 text-sm">Accepted Payment Methods:</span>
                    <div class="flex gap-2">
                        <div class="payment-icon w-8 h-5 bg-gray-200 rounded opacity-70"></div>
                        <div class="payment-icon w-8 h-5 bg-gray-200 rounded opacity-70"></div>
                        <div class="payment-icon w-8 h-5 bg-gray-200 rounded opacity-70"></div>
                        <div class="payment-icon w-8 h-5 bg-gray-200 rounded opacity-70"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    .social-icon {
        transition: all 0.2s ease;
    }
    
    .social-icon:hover {
        transform: translateY(-3px);
    }
    
    @media (prefers-reduced-motion: reduce) {
        .social-icon:hover {
            transform: none;
        }
    }
    
    .payment-icon {
        transition: opacity 0.2s ease;
    }
    
    .payment-icon:hover {
        opacity: 1;
    }
</style>