<style>
/* Modern Footer Styling */
.modern-footer {
    position: relative;
    overflow: hidden;
}

/* Newsletter Section Animations */
@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-10px) rotate(1deg); }
    66% { transform: translateY(5px) rotate(-1deg); }
}

.floating-element {
    animation: float 6s ease-in-out infinite;
}

/* Enhanced Social Icons */
.social-icon-modern {
    position: relative;
    overflow: hidden;
}

.social-icon-modern::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.6s;
    border-radius: 12px;
}

.social-icon-modern:hover::before {
    left: 100%;
}

/* Footer Links Enhancement - Override base link styles */
.footer-link {
    position: relative;
    display: inline-block;
    font-weight: 500;
    text-decoration: none !important; /* Remove underlines */
    color: inherit !important; /* Use the color from parent/utility classes */
}

.footer-link:visited {
    color: inherit !important; /* Ensure visited links don't change color */
}

.footer-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: var(--color-primary-light);
    transition: width 0.3s ease-in-out;
}

.footer-link:hover::after {
    width: 100%;
}

/* Ensure all footer links don't have underlines */
.modern-footer a:not(.btn) {
    text-decoration: none !important;
}

.modern-footer a:not(.btn):hover {
    text-decoration: none !important;
}

/* Contact Item Hover Effects */
.contact-item {
    cursor: pointer;
}

/* Newsletter Form Styling */
.newsletter-form input {
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}

.newsletter-form input:focus {
    transform: translateY(-2px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
}

.btn-primary {
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}

.btn-primary:hover {
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
}

/* Payment Cards */
.payment-card {
    cursor: pointer;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}

.payment-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.3);
}

/* Responsive Design */
@media (max-width: 768px) {
    .newsletter-section {
        padding: 3rem 1rem;
    }
    
    .main-footer {
        padding: 3rem 1rem;
    }
    
    .newsletter-form {
        flex-direction: column;
    }
    
    .social-icon-modern {
        margin-bottom: 1rem;
    }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
    .floating-element,
    .social-icon-modern,
    .contact-item,
    .payment-card {
        animation: none;
        transform: none;
        transition: none;
    }
    
    .social-icon-modern:hover,
    .contact-item:hover,
    .payment-card:hover {
        transform: none;
    }
}

/* Focus states for accessibility */
.footer-link:focus,
.social-icon-modern:focus,
.newsletter-form input:focus,
.btn-primary:focus {
    outline: 2px solid #58cbe0;
    outline-offset: 2px;
}
</style>