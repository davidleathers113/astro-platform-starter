---
import ShieldIcon from './icons/ShieldIcon.astro';
import UsersIcon from './icons/UsersIcon.astro';
import CreditCardIcon from './icons/CreditCardIcon.astro';
import ClockIcon from './icons/ClockIcon.astro';
---

<div class="trust-indicators py-8 md:py-10 relative">
    <div class="container mx-auto px-4">
        <div class="bg-gray-100 dark:bg-gray-800/70 backdrop-blur-sm rounded-xl shadow-lg p-6 md:p-8">
            <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
                <!-- Trust Badge 1: BBB Rating -->
                <div class="trust-badge flex flex-col items-center text-center">
                    <div class="badge-icon bg-[#2d7984]/10 p-3 rounded-full mb-3">
                        <ShieldIcon />
                    </div>
                    <div class="badge-text">
                        <p class="font-bold text-md">A+ BBB Rating</p>
                        <p class="text-gray-600 text-sm">Accredited Business</p>
                    </div>
                </div>

                <!-- Trust Badge 2: Customers Served -->
                <div class="trust-badge flex flex-col items-center text-center">
                    <div class="badge-icon bg-[#2d7984]/10 p-3 rounded-full mb-3">
                        <UsersIcon />
                    </div>
                    <div class="badge-text">
                        <p class="font-bold text-md">50,000+</p>
                        <p class="text-gray-600 text-sm">Clients Served</p>
                    </div>
                </div>

                <!-- Trust Badge 3: Debt Resolved -->
                <div class="trust-badge flex flex-col items-center text-center">
                    <div class="badge-icon bg-[#2d7984]/10 p-3 rounded-full mb-3">
                        <CreditCardIcon />
                    </div>
                    <div class="badge-text">
                        <p class="font-bold text-md">$1.2 Billion</p>
                        <p class="text-gray-600 text-sm">Debt Resolved</p>
                    </div>
                </div>

                <!-- Trust Badge 4: Years in Business -->
                <div class="trust-badge flex flex-col items-center text-center">
                    <div class="badge-icon bg-[#2d7984]/10 p-3 rounded-full mb-3">
                        <ClockIcon />
                    </div>
                    <div class="badge-text">
                        <p class="font-bold text-md">12+ Years</p>
                        <p class="text-gray-600 text-sm">Industry Experience</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .trust-badge {
        transition: transform 0.3s ease;
    }
    
    .trust-badge:hover {
        transform: translateY(-5px);
    }
    
    @media (prefers-reduced-motion: reduce) {
        .trust-badge:hover {
            transform: none;
        }
    }
</style>