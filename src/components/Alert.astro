---
import InfoIcon from './icons/InfoIcon.astro';

interface Props {
    class?: string;
    type?: 'info' | 'warning' | 'error' | 'success';
}

const { class: className, type = 'info' } = Astro.props;

// Determine color classes based on type for proper contrast
const colorClasses = {
    info: 'bg-primary text-white',
    warning: 'bg-yellow-700 text-white',
    error: 'bg-red-700 text-white',
    success: 'bg-green-700 text-white'
};

const activeColorClass = colorClasses[type];
---

<div class:list={['flex gap-4 p-4 rounded-sm', activeColorClass, className]}>
    <InfoIcon class="w-6 h-6 shrink-0" />
    <slot />
</div>